@page
@model BassClefPracticeModel
@{
    ViewData["Title"] = "Bass Clef Practice";
}

<img id="bass-clef" src="~/img/bassClef.png" alt="Bass clef" />
<canvas id="sheet-music" width="1200" height="240"></canvas>

<form id="notes-form">
    <input class="answer-box" type="text" maxlength="2" name="note1">
    <input class="answer-box" type="text" maxlength="2" name="note2">
    <input class="answer-box" type="text" maxlength="2" name="note3">
    <input class="answer-box" type="text" maxlength="2" name="note4">
    <div class="button-container">
        <input id="submit" type="button" onclick="submitAnswer()" value="Submit">
    </div>
</form>

<h3 id="total-success"></h3>
<h3 id="wrong-answers"></h3>

<script src="~/js/bassClef.js"></script>
<script src="~/js/sheet.js"></script>
